
@{
        ViewBag.Title = "DisplayData";
}

<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>

<div class="well-sm">
    <h3>Student Management System.</h3>
</div>




@{ var result = "";
    Array tempData = null;
    char[] delimiterChar = { ',' };

    var dataFile = Server.MapPath("~/App_Data/tempData.txt");

    if (File.Exists(dataFile))
    {
        tempData = File.ReadAllLines(dataFile);
        if (tempData == null)
        {
            // Empty file.
            result = "The file is empty.";
        }
    }
    else
    {
        // File does not exist.
        result = "The file does not exist.";
    } 
    }


<div class="well-sm">
    <div>
        @result
        @if (result == "")
        {
            <div style="height: 400px; overflow: auto;">
                <table class="table table-condensed table-hover">
                    <thead style="position: sticky;top: 0">
                        <tr bgcolor="#008080" class="auto-style">
                            <th class="t">ID Number</th>
                            <th class="t">Name</th>
                            <th class="t">Surnamne</th>
                            <th class="t">Email</th>
                            <th class="t">Cell Number</th>
                            <th class="t">Grade Average</th>
                            <th class="t">Degree</th>
                            <th class="t">Funder</th>
                            <th class="t">Amount</th>
                        </tr>
                    </thead>
                    @foreach (string dataLine in tempData)
                    {
                        <tr>
                            @foreach (string dataItem in dataLine.Split(delimiterChar))
                            {
                                <td class="t">@dataItem</td>
                            }
                        </tr>
                    }
                </table>
            </div>
        }
    </div>
</div>